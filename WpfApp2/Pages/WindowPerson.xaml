<Window x:Class="WpfApp2.WindowPerson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="WindowPerson" Height="250" Width="350" FontSize="24">
    <Grid>
        <StackPanel>
            <GroupBox Header="Введите новое имя">
            <TextBox Name="tbName"></TextBox>
            </GroupBox>
            <GroupBox Header="Введите новую фамилию">
                <TextBox Name="tbSurname"></TextBox>
            </GroupBox>
            <Button Click="Button_Click">Изменить данные</Button>
        </StackPanel>
    </Grid>
</Window>
